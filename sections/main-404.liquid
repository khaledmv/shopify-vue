{% for block in section.blocks %}
  {% case block.type %}
    {% when '@app' %}
    {% render block %}
    {% when 'title' %}

    <h1 class="title">
      {{ block.settings.title }}
    </h1>
    {% when 'button' %}

    {% if block.settings.button_url != blank %}
      <a href="{{ block.settings.button_url }}" class="button">
        {{ block.settings.buttonText }}
      </a>
    {% else %}
      <a href="{{ routes.root_url }}" class="button">
        Continue Shopping
      </a>
    {% endif %}
{% else %}
  {% endcase %}
{% endfor %}



{% schema %}
  {
    "name": "Title",
    "tag": "header",
    "settings": [],

    "blocks": [
      {
        "type": "@app"
      }, {
        "name": "404 Title",
        "type": "title",

        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "404 Title Text",
            "default": "404 Not found"

          }
        ]
      }, {
        "name": "Button",
        "type": "button",

        "settings": [
          {
            "type": "text",
            "id": "buttonText",
            "label": "Button Text",
            "default": "Continue Shopping"
          }, {
            "type": "url",
            "id": "button_url",
            "label": "Select redirect url"
          }
        ]
      }
    ]
  }
{% endschema %}